<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:nmfc="clr-namespace:Ntreev.ModernUI.Framework.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ModernMenuItem.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <nmfc:ModernMenuStyleSelector x:Key="ModernMenu_ItemContainerStyleSelector" Style="{StaticResource IMenuItem_ModernMenuItem_Style}" />

    <Style TargetType="{x:Type Menu}" BasedOn="{StaticResource {x:Type Menu}}">
        <Setter Property="Background" Value="{StaticResource WindowBackground}" />
        <Setter Property="ItemContainerStyleSelector" Value="{StaticResource ModernMenu_ItemContainerStyleSelector}" />
    </Style>
    
</ResourceDictionary>