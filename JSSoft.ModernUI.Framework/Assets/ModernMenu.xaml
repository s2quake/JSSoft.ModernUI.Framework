<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:jmfc="clr-namespace:JSSoft.ModernUI.Framework.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ModernMenuItem.xaml" />
    </ResourceDictionary.MergedDictionaries>
    
    <jmfc:ModernMenuStyleSelector x:Key="ModernMenu_ItemContainerStyleSelector" Style="{StaticResource IMenuItem_ModernMenuItem_Style}" />
    
    <Style TargetType="{x:Type jmfc:ModernMenu}" BasedOn="{StaticResource {x:Type Menu}}">
        <Setter Property="Height" Value="25" />
        <Setter Property="ItemContainerStyleSelector" Value="{StaticResource ModernMenu_ItemContainerStyleSelector}" />
        <Setter Property="Background" Value="{DynamicResource WindowBackground}" />
    </Style>

</ResourceDictionary>
