<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:jmfc="clr-namespace:JSSoft.ModernUI.Framework.Controls"
                    xmlns:jmfv="clr-namespace:JSSoft.ModernUI.Framework.Converters">

    <jmfv:InputGestureToStringConverter x:Key="InputGestureToStringConverter" />

    <Style x:Key="ModernContextMenuItem_Style" TargetType="{x:Type jmfc:ModernContextMenuItem}" BasedOn="{StaticResource {x:Type MenuItem}}">
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Header" Value="{Binding DisplayName}" />
        <Setter Property="ItemsSource" Value="{Binding ItemsSource}" />
        <Setter Property="InputGestureText" Value="{Binding InputGesture, Converter={StaticResource InputGestureToStringConverter}}" />
        <Setter Property="IsChecked" Value="{Binding IsChecked}" />
        <Setter Property="Icon" Value="{Binding Icon}" />
        <Setter Property="Command" Value="{Binding Command}" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsVisible}" Value="False">
                <Setter Property="Visibility" Value="Collapsed" />
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <jmfc:ModernMenuStyleSelector x:Key="ModernContextMenuItemStyleSelector" StyleName="ModernContextMenuItem_Style" Style="{StaticResource ModernContextMenuItem_Style}" />

    <Style TargetType="{x:Type jmfc:ModernContextMenu}" BasedOn="{StaticResource {x:Type ContextMenu}}">
        <Setter Property="UsesItemContainerTemplate" Value="True" />
        <Setter Property="ItemContainerStyleSelector" Value="{StaticResource ModernContextMenuItemStyleSelector}" />
    </Style>

</ResourceDictionary>
